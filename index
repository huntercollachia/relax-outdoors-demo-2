    <script>
        // Smooth Reveal trigger
        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.classList.add('active');
                }
            });
        }, { threshold: 0.1 });

        document.querySelectorAll('.reveal').forEach(el => observer.observe(el));

        // Multi-Step Lead Wizard Functional JS
        let currentWizStep = 1;
        function advanceWiz() {
            const num = document.getElementById('wStepNum');
            const title = document.getElementById('wTitle');
            const grid = document.getElementById('wContent');
            const btn = document.getElementById('wizBtn');

            if(currentWizStep >= 3) {
                alert("Consultation Reserved! One of our Davenport specialists will contact you.");
                location.reload();
                return;
            }

            currentWizStep++;
            num.innerText = "0" + currentWizStep;

            grid.style.opacity = '0';
            setTimeout(() => {
                if(currentWizStep === 2) {
                    title.innerText = "Expected Start Season?";
                    grid.innerHTML = `
                        <div class="opt-btn active" onclick="setWizard(this)">Urgent / Next 30 Days</div>
                        <div class="opt-btn" onclick="setWizard(this)">Next Spring</div>
                        <div class="opt-btn" onclick="setWizard(this)">Late Summer 2025</div>
                        <div class="opt-btn" onclick="setWizard(this)">Still in Budget Phase</div>
                    `;
                } else if(currentWizStep === 3) {
                    title.innerText = "Submit For Final Expert Quote";
                    grid.innerHTML = `
                        <div style="grid-column: span 2;">
                            <input type="text" placeholder="Your Name*" style="width:100%; padding:15px; border:2px solid var(--bg-off-white); margin-bottom:12px;">
                            <input type="email" placeholder="Preferred Email Address*" style="width:100%; padding:15px; border:2px solid var(--bg-off-white);">
                        </div>
                    `;
                    btn.innerText = "SEND REQUEST";
                }
                grid.style.opacity = '1';
            }, 300);
        }

        function setWizard(el) {
            const p = el.parentNode.children;
            for(let opt of p) opt.classList.remove('active');
            el.classList.add('active');
        }

        // Horizontal Panel Tab Control
        function showPane(idx, el) {
            const list = document.querySelectorAll('.tab-item');
            const panes = document.querySelectorAll('.pane');
            
            list.forEach(t => t.classList.remove('active'));
            panes.forEach(p => p.classList.remove('active'));

            el.classList.add('active');
            panes[idx].classList.add('active');
        }
    </script>
